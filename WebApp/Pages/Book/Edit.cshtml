@page
@model WebApp.Pages.Book.EditModel
@{
	ViewData["Title"] = "Update record";
}
<h1>Update Record</h1>

<div class="row">
	<div class="col-6">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Books.BookId"/>

			<div class="form-group">
				<label asp-for="Books.BookTitle" class="control-label">Book Title</label>
				<input type="text" asp-for="Books.BookTitle" class="form-control" />
				<span asp-validation-for="Books.BookTitle" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Books.BookDescription" class="control-label">Description</label>
				<input type="text" asp-for="Books.BookDescription" class="form-control" />
				<span asp-validation-for="Books.BookDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Books.BookAuthor" class="control-label">Author</label>
				<input type="text" asp-for="Books.BookAuthor" class="form-control" />
				<span asp-validation-for="Books.BookAuthor" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<a asp-page="Index" class="btn btn-secondary">Back</a>
				<input type="submit" value="Update" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}